@using System.Linq
@using News.Controllers 
@{
    ViewBag.Title = "NewsDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var categories = ViewBag.categories;
    var news = ViewBag.news as dynamic;
    var popularNews = ViewBag.popularNews;
    var tags = ViewBag.tags;
}

<!-- Breadcrumb -->
<div class="container">
    <div class="headline bg0 flex-wr-sb-c p-rl-20 p-tb-8">
        <div class="f2-s-1 p-r-30 m-tb-6">
            <a href="/Home/Index" class="breadcrumb-item f1-s-3 cl9">
                Anasayfa
            </a>

            @{string strUrl1 = "/haberler/" + @news.CATEGORYNAME; }
            <a href="@strUrl1" class="breadcrumb-item f1-s-3 cl9">
                @news.CATEGORYNAME
            </a>

            <span class="breadcrumb-item f1-s-3 cl9">
                @news.TITLE
            </span>
        </div>

        <div class="pos-relative size-a-2 bo-1-rad-22 of-hidden bocl11 m-tb-6">
            <input class="f1-s-1 cl6 plh9 s-full p-l-25 p-r-45" type="text" name="search" placeholder="Search">
            <button class="flex-c-c size-a-1 ab-t-r fs-20 cl2 hov-cl10 trans-03">
                <i class="zmdi zmdi-search"></i>
            </button>
        </div>

        <div align="center">
        <script language="Javascript" src="http://sa.sayaclar.com/c/s4.php?a=4ej56xl&s=1a7"></script></div>
    </div>
</div>

<!-- Content -->
<section class="bg0 p-b-140 p-t-10">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8 p-b-30">
                <div class="p-r-10 p-r-0-sr991">
                    <!-- Blog Detail -->
                    <div class="p-b-70">
                        <a href="#" class="f1-s-10 cl2 hov-cl10 trans-03 text-uppercase">
                            @news.CATEGORYNAME
                        </a>

                        <h3 class="f1-l-3 cl2 p-b-16 p-t-33 respon2">
                            @news.TITLE
                        </h3>

                        <div class="flex-wr-s-s p-b-40">
                            <span class="f1-s-3 cl8 m-r-15">
                                <a href="#" class="f1-s-4 cl8 hov-cl10 trans-03">
                                    @news.AUTHOR
                                </a>

                                <span class="m-rl-3">-</span>

                                <span>
                                    @news.CREATEDATE
                                </span>
                            </span>

                            <span class="f1-s-3 cl8 m-r-15">
                                @news.VIEWS_
                            </span>

                            <a href="#" class="f1-s-3 cl8 hov-cl10 trans-03 m-r-15">
                                0 Yorum
                            </a>
                        </div>

                        <div class="wrap-pic-max-w p-b-30">
                            <img src="~/images/@news.SMALLIMAGE" alt="IMG">
                        </div>

                        <p class="f1-s-11 cl6 p-b-25">
                            @news.CONTENT_
                        </p>

                        <!-- Tag -->
                        <div class="flex-s-s p-t-12 p-b-15">
                            <span class="f1-s-12 cl5 m-r-8">
                                <b>Etiketler:</b>
                            </span>
                            @{string strUrl = "/haberler/" + RootController.ToUrl((string)news.NAME_) + "/" + news.id; }
                            <div class="flex-wr-s-s size-w-0">
                                <a href="@strUrl" class="f1-s-12 cl8 hov-link1 m-r-15">
                                    @news.NAME_
                                </a>
                            </div>
                        </div>

                        <!-- Share -->
                        <div class="flex-s-s">
                            <span class="f1-s-12 cl5 p-t-1 m-r-15">
                                <b>Paylaş:</b>
                            </span>

                            <div class="flex-wr-s-s size-w-0">
                                <a href="#" class="dis-block f1-s-13 cl0 bg-facebook borad-3 p-tb-4 p-rl-18 hov-btn1 m-r-3 m-b-3 trans-03">
                                    <i class="fab fa-facebook-f m-r-7"></i>
                                    Facebook
                                </a>

                                <a href="#" class="dis-block f1-s-13 cl0 bg-twitter borad-3 p-tb-4 p-rl-18 hov-btn1 m-r-3 m-b-3 trans-03">
                                    <i class="fab fa-twitter m-r-7"></i>
                                    Twitter
                                </a>

                                <a href="#" class="dis-block f1-s-13 cl0 bg-google borad-3 p-tb-4 p-rl-18 hov-btn1 m-r-3 m-b-3 trans-03">
                                    <i class="fab fa-google-plus-g m-r-7"></i>
                                    Google+
                                </a>

                                <a href="#" class="dis-block f1-s-13 cl0 bg-pinterest borad-3 p-tb-4 p-rl-18 hov-btn1 m-r-3 m-b-3 trans-03">
                                    <i class="fab fa-pinterest-p m-r-7"></i>
                                    Pinterest
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Leave a comment -->
                    <div>
                        <h4 class="f1-l-4 cl3 p-b-12">
                            Yorum Yap
                        </h4>

                        <p class="f1-s-13 cl8 p-b-40">
                            E-posta hesabınız yayımlanmayacak. Gerekli alanlar işaretlendi *
                        </p>

                        <form>
                            <textarea class="bo-1-rad-3 bocl13 size-a-15 f1-s-13 cl5 plh6 p-rl-18 p-tb-14 m-b-20" name="msg" placeholder="Yorum Yap..."></textarea>

                            <input class="bo-1-rad-3 bocl13 size-a-16 f1-s-13 cl5 plh6 p-rl-18 m-b-20" type="text" name="name" placeholder="İsim*">

                            <input class="bo-1-rad-3 bocl13 size-a-16 f1-s-13 cl5 plh6 p-rl-18 m-b-20" type="text" name="email" placeholder="Email*">

                            <input class="bo-1-rad-3 bocl13 size-a-16 f1-s-13 cl5 plh6 p-rl-18 m-b-20" type="text" name="website" placeholder="Website">

                            <button class="size-a-17 bg2 borad-3 f1-s-12 cl0 hov-btn1 trans-03 p-rl-15 m-t-10">
                                Yorumu Gönder
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-md-10 col-lg-4 p-b-30">
                <div class="p-l-10 p-rl-0-sr991 p-t-70">
                    <!-- Category -->
                    <div class="p-b-60">
                        <div class="how2 how2-cl4 flex-s-c">
                            <h3 class="f1-m-2 cl3 tab01-title">
                                Kategoriler
                            </h3>
                        </div>

                        <ul class="p-t-35">
                            @foreach (var item in categories)
                            {
                                 strUrl = "/haberler/" + RootController.ToUrl((string)item.NAME_);
                            <li class="how-bor3 p-rl-4">
                                <a href="@strUrl" class="dis-block f1-s-10 text-uppercase cl2 hov-cl10 trans-03 p-tb-13">
                                    @item.NAME_
                                </a>
                            </li>
                            }
                            
                        </ul>
                    </div>

                    <!-- Archive -->
                    <div class="p-b-37">
                        <div class="how2 how2-cl4 flex-s-c">
                            <h3 class="f1-m-2 cl3 tab01-title">
                                Arşiv
                            </h3>
                        </div>

                        <ul class="p-t-32">
                            <!-- Dönülecek kısım -->
                            <li class="p-rl-4 p-b-19">
                                <a href="#" class="flex-wr-sb-c f1-s-10 text-uppercase cl2 hov-cl10 trans-03">
                                    <span>
                                        July 2018
                                    </span>

                                    <span>
                                        (9)
                                    </span>
                                </a>
                            </li>
                            <!-- Dönülecek kısım -->
                        </ul>
                    </div>

                    <!-- Popular Posts -->
                    <div class="p-b-30">
                        <div class="how2 how2-cl4 flex-s-c">
                            <h3 class="f1-m-2 cl3 tab01-title">
                                Popüler Haberler
                            </h3>
                        </div>

                        <ul class="p-t-35">
                            
                            @foreach (var item in popularNews)
                            {
                                 strUrl = "/haberler/" + item.categoryname + "/" + RootController.ToUrl((string)item.TITLE) + "/" + item.ID;
                            <li class="flex-wr-sb-s p-b-30">
                                <a href="@strUrl" class="size-w-10 wrap-pic-w hov1 trans-03">
                                    <img src="~/images/@item.SMALLIMAGE" alt="IMG">
                                </a>

                                <div class="size-w-11">
                                    <h6 class="p-b-4">
                                        <a href="@strUrl" class="f1-s-5 cl3 hov-cl10 trans-03">
                                            @item.TITLE
                                        </a>
                                    </h6>

                                    <span class="cl8 txt-center p-b-24">
                                        <a href="#" class="f1-s-6 cl8 hov-cl10 trans-03">
                                            @item.categoryname
                                        </a>

                                        <span class="f1-s-3 m-rl-3">
                                            -
                                        </span>

                                        <span class="f1-s-3">
                                            @item.CREATEDATE
                                        </span>

                                        <span class="f1-s-3 m-rl-3">
                                            -
                                        </span>

                                        <span class="f1-s-3">
                                            @item.AUTHOR
                                        </span>
                                    </span>
                                </div>
                            </li>
                            }

                        </ul>
                    </div>

                    <!-- Tag -->
                    <div>
                        <div class="how2 how2-cl4 flex-s-c m-b-30">
                            <h3 class="f1-m-2 cl3 tab01-title">
                                Etiketler
                            </h3>
                        </div>

                        <div class="flex-wr-s-s m-rl--5">
                            @foreach (var tag in tags)
                            {
                                 strUrl = "/haberler/" + RootController.ToUrl((string)tag.tagname) + "/" + tag.tagid;
                            <a href="@strUrl" class="flex-c-c size-h-2 bo-1-rad-20 bocl12 f1-s-1 cl8 hov-btn2 trans-03 p-rl-20 p-tb-5 m-all-5">
                                @tag.tagname
                            </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

